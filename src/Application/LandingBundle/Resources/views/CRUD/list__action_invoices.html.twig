{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    {% if object.price %}
        <div class="btn-group">
            <a class="btn btn-sm btn-default view_link" href="{{ admin.generateObjectUrl('invoice_html', object) }}">HTML</a>
            <a class="btn btn-sm btn-default view_link" href="{{ admin.generateObjectUrl('invoice_pdf', object) }}">PDF</a>
        </div>
    {% else %}
        <em>Provide the price first!</em>
    {% endif %}
{% endblock %}