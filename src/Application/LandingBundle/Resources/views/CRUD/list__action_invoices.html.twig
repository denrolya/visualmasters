{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    {% if object.price %}
        <div class="btn-group">
            <a class="btn btn-sm btn-default view_link" href="{{ path('order_invoice_html', {'id': object.id}) }}">HTML</a>
            <a class="btn btn-sm btn-default view_link" href="{{ path('order_invoice_pdf', {'id': object.id}) }}">PDF</a>
        </div>
    {% else %}
        <em>Provide the price first!</em>
    {% endif %}
{% endblock %}