<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <h2 class="section-heading">Contact Us</h2>

                <p class="subheading">Ready to start your next project with us? That's great! Give us a call or send us an email and we will get back to you as soon as possible!</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <h3 class="location-info">
                    <span class="icon icon-location"></span>
                    <strong>5B Street, City 50987<br> New Town US</strong>
                </h3>
            </div>
            <div class="col-md-3">
                <h3 class="location-info">
                    <span class="icon icon-email"></span>
                    <strong><a href="mailto:your-email@your-domain.com">info@visualmasters.com</a></strong>
                </h3>
            </div>
            <div class="col-md-3">
                <h3 class="location-info">
                    <span class="icon icon-skype"></span>
                    <strong>visual_masters</strong>
                </h3>
            </div>
            <div class="col-md-3">
                <h3 class="location-info">
                    <span class="icon icon-phone center-block"></span>
                    <strong>+0(123)-456-7890</strong>
                </h3>
            </div>
        </div>
        <hr class="hr-full-width hr-muted">
        <div class="row">
            <div class="col-md-2 col-md-offset-3">
                <h4 class="schedule">Mon-Fri: 10am to 8 pm</h4>
            </div>
            <div class="col-md-2">
                <h4 class="schedule">Sat: 11am to 3pm</h4>
            </div>
            <div class="col-md-2">
                <h4 class="schedule">Sun: Closed</h4>
            </div>
            <div class="col-md-2"></div>
        </div>
        <hr class="hr-full-width hr-muted">

        <div class="row">
            <div class="col-lg-2 col-lg-offset-5">
                <a href="#" class="btn btn-primary btn-place-order" data-toggle="modal" data-target="#orderModal">MAKE ORDER</a>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="orderModal" tabindex="-1" role="dialog" aria-labelledby="orderModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="orderModalLabel">Make Order \ Contact Us</h4>
                        <span class="modal-header-border"></span>
                    </div>
                    <div class="modal-body">
                        <div class="modal-container">
                            <div id="order-form">
                                <h5 class="modal-notice text-muted">please fill the fields below:</h5>

                                <form name="order-form" {{ form_enctype(form) }}>
                                    {{ form_row(form.name) }}
                                    {{ form_row(form.email) }}
                                    {{ form_row(form.phonenumber) }}
                                    {{ form_row(form.address) }}
                                    {{ form_row(form.postal) }}
                                    {{ form_row(form.comments) }}
                                    <div class="form-group m-t">
                                        <input type="file" name="zipfile" id="zipfile" class="inputfile" accept=".zip,application/octet-stream,application/zip,application/x-zip,application/x-zip-compressed"/>
                                        <label for="zipfile" class="btn btn-default"><span>Attach file*</span></label>
                                        <input type="submit" class="btn btn-primary btn-submit" role="button" value="Send">
                                    </div>
                                    <div class="form-group text-left">
                                        <span class="text-muted">* only zip files allowed</span>
                                    </div>
                                    {{ form_rest(form) }}
                                </form>
                            </div>
                        </div>

                        <div class="hidden" id="order-success-note">
                            <h3>Order was successfully placed</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="footer">
        <div class="col-md-4 col-md-offset-4">
            Copyright (c) VisualMasters 2016
        </div>
        <div class="col-md-4">
            <a href=""><span class="icon icon-footer icon-facebook"></span></a>
            <a href=""><span class="icon icon-footer icon-twitter"></span></a>
        </div>
    </div>
</section>