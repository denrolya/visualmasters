<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Invoice from VisualMasters</title>
    <link href="https://fonts.googleapis.com/css?family=Archivo+Narrow:400,500,700" rel="stylesheet">

    {% block stylesheets %}
        {% stylesheets
        "bundles/imperivsite/css/bootstrap-grid.min.css"
        "bundles/imperivsite/css/bootstrap.css"
        "bundles/imperivsite/css/bootstrap-reboot.min.css"
        "bundles/imperivsite/css/invoice.css"
        filter="yui_css, cssrewrite" %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
        {% endstylesheets %}
    {% endblock stylesheets %}

</head>
<body>

<section class="invoice-header clearfix">
    <div class="clearfix">
        <div class="first-col">
            <h4>VisualMasters LIMITED</h4>
            <p> 09798316 <br>
                4 Windsor Terrace, <br>
                Hagley Road, Birmingham, <br> England, B16 8UH <br>
                Tel +447449552179 <br>
                Email: visualmasters.co.uk@gmail.com <br>
                Web site : visualmasters.co.uk <br>
            </p>
        </div>
        <img src="{{ asset('bundles/imperivsite/img/invoice-logo.png') }}" alt="invoice-logo.png" class="invoice-logo">
        <div class="last-col">
            <h4>INVOICE</h4>
            <h5>referenc: 10111</h5>
            <p>Date: April 21 2017 <br> U.I.N 09798316 <br> Bank details: Barclays <br>
                Account N: 93721973 <br>
                Sort code: 20-07-84 <br>
            </p>

        </div>
    </div>
    <div class="line"></div>
    <div class="invoice-details">
        <div class="first-col">
            <h5>BILL TO</h5>
            <h6>{{ order.name }}</h6>
            <h6>{{ order.address }}</h6>
            <h6>Phone: {{ order.phonenumber }}</h6>
            <h6>Customer ID CUST{{ order.id }}</h6>
        </div>
        <div class="last-col">
            <h5>SHIP TO</h5>
            <h6>{{ order.name }}</h6>
            <h6>{{ order.address }}</h6>
            <h6>Phone: {{ order.phonenumber }}</h6>
            <h6>Customer ID CUST{{ order.id }}</h6>
        </div>
    </div>
</section>
<section class="invoice-table">
    <table class="table first-table">
        <tbody>
        <tr class="text-uppercase">
            <td>SALESPERSON</td>
            <td width="58%">PROJECT</td>
            <td>TERMS</td>
            <td>DELIVERY DATE</td>
        </tr>
        <tr>
            <td>Mr. Abcd</td>
            <td>Project/Product</td>
            <td>Cash</td>
            <td>May 15 2018</td>
        </tr>
        </tbody>
    </table>
    {% set totalPrice = 0 %}
    {% set totalCharge = 0 %}
    <table class="table second-table">
        <thead>
        <tr>
            <td width="11.1%">QUANTITY</td>
            <td width="40%">DESCRIPTION</td>
            <td width="1%">UNIT PRICE</td>
            <td width="1%">OFFICE CHARGE</td>
            <td width="1%">LINE TOTAL</td>
        </tr>
        </thead>
        <tbody>
        {% for item in order.items %}
            <tr>
                <td>{{ item.quantity }}</td>
                <td>{{ item.description }}</td>
                <td>{{ item.unitPrice }}</td>
                <td>{{ item.officeCharge }}%</td>
                <td>{{ item.totalPrice }}</td>
            </tr>
            {% set totalPrice = totalPrice + item.totalPrice %}
            {% set totalCharge = totalCharge + item.quantity * item.unitPrice * item.officeCharge/100 %}
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3" class="border-0"></td>
            <td >£{{ totalCharge }}</td>
            <td>£{{ totalPrice }}</td>
        </tr>
        <tr>
            <td colspan="3" class="border-0"></td>
            <td class="border-0 text-uppercase">SUBTOTAL</td>
            <td>£{{ totalPrice }}</td>
        </tr>
        <tr>
            <td colspan="3" class="border-0"></td>
            <td class="border-0 text-uppercase"></td>
            <td>£{{ totalPrice }}</td>
        </tr>
        <tr>
            <td colspan="3" class="border-0"></td>
            <td class="total border-0 text-uppercase font-weight-bold">TOTAL</td>
            <td>£{{ totalPrice }}</td>
        </tr>

        </tfoot>
    </table>
    <div class="line"></div>
    <p class="thx-you">Make all checks payable to [VisualMasters] <br> THANK YOU FOR YOUR BUSINESS</p>
</section>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
{% block javascripts %}
    {% javascripts
    "@ImperivSiteBundle/Resources/public/js/jquery_2.1.3.min.js"
    "bundles/imperivsite/js/bootstrap.js"
    filter="yui_js" %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock javascripts %}
</body>
</html>