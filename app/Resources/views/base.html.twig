<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>{% block title %}VisualMasters{% endblock title %}</title>

        {% block stylesheets %}
            {% stylesheets
                "bundles/site/css/bootstrap.css"
                "bundles/site/css/creative.css"
                "bundles/site/css/icomoon.css"
                "bundles/site/css/font-awesome.css"
            filter="yui_css, cssrewrite" %}
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
            {% endstylesheets %}

            <link rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=PT+Sans:400,700'>
            <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=PT+Sans+Narrow" />
        {% endblock stylesheets %}

        <script src='https://www.google.com/recaptcha/api.js?onload=reCaptchaCallback&render=explicit'></script>

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.gif') }}" />
    </head>

    <body id="page-top">
        {% block content %}{% endblock content %}
            
        {% block javascripts %}
            {% javascripts
                "bundles/site/js/jquery_2.1.3.min.js"
                "bundles/site/js/jquery-ui.js"
                "bundles/site/js/bootstrap.js"
            filter="yui_js" %}
                <script src="{{ asset_url }}" type="text/javascript"></script>
            {% endjavascripts %}
        {% endblock javascripts %}
    </body>
</html>