<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>{% block title %}No-title Page{% endblock title %}</title>

        {% block stylesheets %}
            {% stylesheets
            "bundles/imperivsite/css/bootstrap.css"
            "bundles/applicationlanding/css/creative.css"
            "bundles/applicationlanding/css/landing.css"
            "bundles/applicationlanding/css/icomoon.css"
            "bundles/applicationlanding/css/font-awesome.css"
            filter="yui_css, cssrewrite" %}
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
            {% endstylesheets %}
            <link rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=PT+Sans:400,700'>
            <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=PT+Sans+Narrow" />
        {% endblock stylesheets %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body id="page-top">

        {#<div class="content-wrapper">#}
            {#{% render controller('ImperivSiteBundle:Default:navigation') %}#}
            {% block content %}{% endblock content %}
        {#</div>#}
            
        {% block javascripts %}
            {% javascripts
                "@ImperivSiteBundle/Resources/public/js/jquery_2.1.3.min.js"
                "@ImperivSiteBundle/Resources/public/js/jquery-ui.js"
                "bundles/imperivsite/js/bootstrap.js"
                "bundles/applicationlanding/js/*"
            filter="yui_js" %}
                <script src="{{ asset_url }}" type="text/javascript"></script>
            {% endjavascripts %}
        {% endblock javascripts %}
    </body>
</html>